<!doctype html>
<html lang="<%= lng || 'ja' %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <% if (typeof og !== 'undefined') { %>
    <title><%= og.title %></title>
    <meta name="description" content="<%= og.desc %>" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= og.title %>" />
    <meta property="og:description" content="<%= og.desc %>" />
    <meta property="og:image" content="<%= og.image %>" />
    <meta property="og:url" content="<%= og.url %>" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="<%= og.title %>" />
    <meta name="twitter:description" content="<%= og.desc %>" />
    <meta name="twitter:image" content="<%= og.image %>" />
  <% } else { %>
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle : (t ? t('brand') : 'Instant Sale') %></title>
  <% } %>

  <link rel="icon" href="/public/logo.png?v=<%= assetVer %>" />
  <link rel="stylesheet" href="/public/style.css?v=<%= assetVer %>" />
</head>
<body class="layout">
  <%- include('partials/header') %>

  <main class="container">
    <%- body %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
