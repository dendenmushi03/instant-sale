<!doctype html>
<html lang="<%= lng || 'ja' %>">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= t('image_license.title') %> | <%= t('brand') %></title>
  <link rel="stylesheet" href="/public/style.css?v=<%= assetVer %>" />
  <link rel="icon" href="/public/logo.png?v=<%= assetVer %>" />
</head>
<body class="layout legal">
  <header class="nav">
    <a class="nav__brand" href="/">
      <img class="nav__logo" src="/public/logo.png" alt="Instant Sale" width="28" height="28" loading="eager" decoding="async" />
      <span class="nav__brandText"><%= t('brand') %></span>
    </a>
    <nav class="nav__right">
      <% if (me) { %>
        <span class="nav__user"><%= me.name || me.email %></span>
        <form method="post" action="/logout" class="inline">
          <button class="btn btn--ghost"><%= t('nav.logout') %></button>
        </form>
      <% } else { %>
        <a class="btn btn--ghost" href="/auth/google"><%= t('nav.login_google') %></a>
      <% } %>
    </nav>
  </header>

<main class="container card">
  <h1><%= t('image_license.h1') %></h1>

  <% const _d = new Date(); const _iso = _d.toISOString().slice(0,10); %>
  <p class="muted"><%= t('image_license.page.last_updated_prefix', { date: _iso }) %></p>

  <h2><%= t('image_license.page.common_title') %></h2>
  <%- t('image_license.page.common_rules_html') %>

  <h2><%= t('image_license.page.presets_title') %></h2>

  <h3><%= t('image_license.page.personal_title') %></h3>
  <%- t('image_license.page.personal_desc_html') %>

  <h3><%= t('image_license.page.standard_title') %></h3>
  <%- t('image_license.page.standard_desc_html') %>

  <h3><%= t('image_license.page.lite_title') %></h3>
  <%- t('image_license.page.lite_desc_html') %>

  <h3><%= t('image_license.page.exclusive_title') %></h3>
  <%- t('image_license.page.exclusive_desc_html') %>

  <p style="margin-top:16px">
    <a class="btn btn--primary" href="/creator"><%= t('upload.h1') %></a>
  </p>
</main>

  <footer class="site-footer">
    <div class="footer__links">
      <a href="/terms"><%= t('footer.terms') %></a>
      <span class="dot">•</span>
      <a href="/privacy"><%= t('footer.privacy') %></a>
      <span class="dot">•</span>
      <a href="/tokushoho"><%= t('footer.tokushoho') %></a>
      <span class="dot">•</span>
      <a href="/image-license"><%= t('footer.image_license') %></a>
    </div>
    <div class="footer__copy">© <%= new Date().getFullYear() %> <%= t('brand') %></div>
  </footer>
</body>
</html>