<!doctype html>
<html lang="<%= lng || 'ja' %>">
<head>
  <%- include('../partials/head', { title: t('privacy.title') + ' | ' + t('brand') }) %>
</head>
<body class="layout">
  <%- include('../partials/header') %>

  <main class="container legal">
    <h1><%= t('privacy.h1') %></h1>
    <% const _last = (typeof lastUpdated !== 'undefined') ? lastUpdated : '2025-11-01'; %>
    <p><%= t('privacy.last_updated', { date: _last }) %></p>

    <p><%- t('privacy.intro_html') %></p>

    <h2>1. <%= t('privacy.section.collected') %></h2>
    <h3><%= t('privacy.collected.google.h3') %></h3>
    <ul>
      <li><%= t('privacy.collected.google.item') %></li>
    </ul>
    <h3><%= t('privacy.collected.service.h3') %></h3>
    <ul>
      <li><%= t('privacy.collected.service.item1') %></li>
      <li><%= t('privacy.collected.service.item2') %></li>
      <li><%= t('privacy.collected.service.item3') %></li>
      <li><%= t('privacy.collected.service.item4') %></li>
    </ul>

    <h2>2. <%= t('privacy.section.usage') %></h2>
    <ul>
      <li><%= t('privacy.usage.item1') %></li>
      <li><%= t('privacy.usage.item2') %></li>
      <li><%= t('privacy.usage.item3') %></li>
      <li><%= t('privacy.usage.item4') %></li>
    </ul>

    <h2>3. <%= t('privacy.section.sharing') %></h2>
    <p><%- t('privacy.sharing_html') %></p>

    <h2>4. <%= t('privacy.section.security') %></h2>
    <p><%- t('privacy.security_html') %></p>

    <h2>5. <%= t('privacy.section.retention') %></h2>
    <p><%- t('privacy.retention_html') %></p>

    <h2>6. <%= t('privacy.section.contact') %></h2>
    <p><%= t('privacy.contact_prefix') %><a href="mailto:<%= contactEmail %>"><%= contactEmail %></a><% if (website) { %> / <a href="<%= website %>" target="_blank" rel="noopener"><%= website %></a><% } %></p>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
